@model TopSliderDetailVM


@{
    ViewData["Title"] = "Detail";
}





<div class="page-content-wrapper">
    <div class="page-content-wrapper-inner">
        <div class="content-viewport">

            <div class="row">
                <div class="col-12 py-5">

                    <div class="col-lg-12">
                        <button class="btn btn-primary mb-5">Create</button>

                        <div class="grid">

                            <div class="item-wrapper">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Logo</th>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>Create Date</th>
                                                <th>Status</th>

                                            </tr>
                                        </thead>
                                        <tbody>


                                                <tr>
                                                    <td class="d-flex align-items-center border-top-0" style="border-right:1px solid orange;">
                                                    <img class="profile-img img-sm img-rounded mr-2" src="~/images/@Model.Logo" alt="profile image">
                                                        <span>Herman Beck</span>
                                                    </td>
                                                    <td style="border-right:1px solid orange;">@Model.Title</td>
                                                <td style="border-right:1px solid orange;">@Model.Description</td>
                                                <td style="border-right:1px solid orange;"><p style="width:250px; overflow-wrap: break-word;">@Model.CreatedDate</p></td>
                                                    <td style="border-right:1px solid orange;" class="d-flex justify-content-center">

                                                    @if (!Model.Status)
                                                        {

                                                            <div style="border-radius: 50%; width: 20px; height: 20px; background: yellowgreen;"></div>

                                                        }
                                                        else
                                                        {

                                                            <div style="border-radius: 50%; width: 20px; height: 20px; background: red;"></div>

                                                        }



                                                    </td>

                                                </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


