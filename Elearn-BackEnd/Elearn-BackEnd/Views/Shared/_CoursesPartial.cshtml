@model IEnumerable<Course>



@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="course">
            <div class="course_image"><img src="~/images/@item.Images?.Where(m=>m.CourseId==m.Id).FirstOrDefault()?.Name" alt=""></div>
            <div class="course_body">
                <div class="course_header d-flex flex-row align-items-center justify-content-start">
                    <div class="course_tag"><a href="#">@item.Tag</a></div>
                    <div class="course_price ml-auto">Price: <span>$@(item.price)</span></div>
                </div>
                <div class="course_title">
                    <h3><a href="courses.html">@item.Title</a></h3>
                </div>
                <div class="course_text">
                    @item.Description
                </div>
                <div class="course_footer d-flex align-items-center justify-content-start">
                    <div class="course_author_image">
                        <img src="~/images/@item.Author.AuthorImage"
                         alt="">
                    </div>
                    <div class="course_author_name">By <a href="#">@item.Author.FullName</a></div>
                    <div class="course_sales ml-auto"><span>@item.SaleCount</span> Sales</div>
                </div>
            </div>
        </div>
    </div>
}

