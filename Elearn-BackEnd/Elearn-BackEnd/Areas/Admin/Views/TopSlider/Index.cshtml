
@model List<TopSliderVM>

@{
    ViewData["Title"] = "Index";
}





<div class="page-content-wrapper">
    <div class="page-content-wrapper-inner">
        <div class="content-viewport">

            <div class="row">
                <div class="col-12 py-5">

                    <div class="col-lg-12">
                        <button class="btn btn-primary mb-5">Create</button>

                        <div class="grid">

                            <div class="item-wrapper">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Logo</th>
                                                <th>Title</th>
                                                <th>Create Date</th>
                                                <th>Status</th>
                                                <th>Options</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="border-right:1px solid orange;">@item.Id</td>
                                                    <td class="d-flex align-items-center border-top-0" style="border-right:1px solid orange;">
                                                        <img class="profile-img img-sm img-rounded mr-2" src="~/images/@item.Logo" alt="profile image">
                                                        <span>Herman Beck</span>
                                                    </td>
                                                    <td style="border-right:1px solid orange;">@item.Title</td>
                                                    <td style="border-right:1px solid orange;"><p style="width:250px; overflow-wrap: break-word;">@item.CreatedDate</p></td>
                                                    <td style="border-right:1px solid orange;" class="d-flex justify-content-center">

                                                        @if (!item.Status)
                                                        {

                                                             <div style="border-radius: 50%; width: 20px; height: 20px; background: yellowgreen;"></div>

                                                        }else{

                                                            <div style="border-radius: 50%; width: 20px; height: 20px; background: red;"></div>

                                                        }



                                                    </td>
                                                    <td>
                                                        <button class="btn btn-primary"><a asp-action="Detail" asp-route-id="@item.Id" style="color:white;">Detail</a></button>
                                                        <button class="btn btn-danger"><a>Remove</a></button>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>